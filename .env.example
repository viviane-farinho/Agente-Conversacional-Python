# ==============================================
# Secretária IA - Variáveis de Ambiente
# ==============================================

# Chatwoot
CHATWOOT_URL=https://seu-chatwoot.com
CHATWOOT_API_TOKEN=seu_token_chatwoot

# Google APIs
# Baixe o arquivo credentials.json do Google Cloud Console
# e coloque na raiz do projeto
GOOGLE_CALENDAR_CREDENTIALS_FILE=credentials.json
GOOGLE_CALENDAR_TOKEN_FILE=token.json
GOOGLE_DRIVE_FOLDER_ID=id_da_pasta_no_drive

# PostgreSQL/Supabase
# Opção 1: URL completa
DATABASE_URL=postgresql://user:password@host:5432/database

# Opção 2: Parâmetros separados
POSTGRES_HOST=db.xxxx.supabase.co
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=sua_senha
POSTGRES_DB=postgres

# OpenAI (para Whisper - transcrição de áudio)
OPENAI_API_KEY=sk-...

# OpenRouter (RECOMENDADO - permite usar Gemini, Claude, GPT, etc.)
# Obtenha sua chave em: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-...
# Modelos disponíveis: google/gemini-2.0-flash-001, anthropic/claude-3.5-sonnet, openai/gpt-4o, etc.
OPENROUTER_MODEL=google/gemini-2.0-flash-001

# Google Gemini (direto - alternativa ao OpenRouter)
GOOGLE_API_KEY=sua_api_key_gemini

# ElevenLabs (para TTS - síntese de voz)
ELEVENLABS_API_KEY=sua_api_key_elevenlabs
ELEVENLABS_VOICE_ID=33B4UnXyTNbgLmdEDh5P

# Telegram (para alertas)
TELEGRAM_BOT_TOKEN=seu_bot_token
TELEGRAM_CHAT_ID=seu_chat_id

# Servidor
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Configurações do Agente
MESSAGE_QUEUE_WAIT_TIME=3
CONTEXT_WINDOW_LENGTH=50
